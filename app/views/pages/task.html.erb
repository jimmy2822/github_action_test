<h1>Task</h1>

<%= form_tag '/' do %>
    <%= text_field_tag 'search' %>
    <%= submit_tag "搜尋" %>
<% end %>

<br>

<%= form_tag '/' do %>
    標題：<%= text_field_tag 'title' %>
    內容：<%= text_field_tag 'content' %>
    標籤：<%= text_field_tag 'tag' %>
    開始日期：<%= date_field_tag(:start_time, value = nil, options = {})%>
    結束日期：<%= date_field_tag(:end_time, value = nil, options = {})%>
    優先順序：<%= select_tag 'priority', options_for_select(["高", "中", "低"]) %>
    任務狀態：<%= select_tag 'state', options_for_select(["待處理", "進行中", "已完成"]) %>

    <%= submit_tag "+" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>建立時間</th>
      <th>Title</th>
      <th>Content</th>
      <th>Tag</th>
      <th>開始時間</th>
      <th>結束時間</th>
      <th>優先順序</th>
      <th>任務狀態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.build_time %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.tag %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.priority %></td>
        <td><%= task.state %></td>
        <td><%= link_to "Show", task %></td>
        <td><%= link_to "Edit", edit_book_path(task) %></td>
        <td><%= link_to "Destroy", task, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>