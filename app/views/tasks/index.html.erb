<h1>Task</h1>

<%= form_tag('/', :method => "get") do %>
    <%= search_field_tag 'search' %>
    <%= submit_tag "搜尋" %>
<% end %>
<br>

<%= link_to "新增任務", new_task_path %>
<br>

<table style="width:100%;text-align:center">
  <thead>
    <tr>
      <th>標題</th>
      <th>內容</th>
      <th>標籤</th>
      <th>開始時間</th>
      <th>結束時間</th>
      <th>優先順序</th>
      <th>任務狀態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.tag %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.priority %></td>
        <td><%= task.state %></td>
        <td><%= link_to "編輯", edit_task_path(task) %></td>
        <td><%= link_to "刪除", task, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>